#!/usr/bin/env php
<?php

// Here we get the correct path to the vendor folder, depending
// on whether we're using the archive or as a dependency
$vendor = file_exists(__DIR__.'/../vendor/autoload.php')
	? __DIR__.'/../vendor/autoload.php'
	: __DIR__.'/../../../autoload.php';
require $vendor;

// Then we launch the console application
return Rocketeer\Facades\Console::run();
